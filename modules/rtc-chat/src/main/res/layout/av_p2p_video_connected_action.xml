<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    app:layout_constraintBottom_toBottomOf="parent"
    android:padding="30dp">

    <Chronometer
        android:id="@+id/durationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/connectedAudioOnlyImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/av_phone"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center"
        android:text="切到语音通话"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/connectedHangupImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/connectedHangupImageView" />


    <TextView
        android:id="@+id/connectedHangupImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:drawableTop="@drawable/av_hangup_selector"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center"
        android:text="挂断"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/durationTextView" />


    <TextView
        android:id="@+id/switchCameraImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/av_switch_camera_selector"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center"
        android:text="旋转摄像头"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/connectedHangupImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/connectedHangupImageView" />
</androidx.constraintlayout.widget.ConstraintLayout>