<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    app:layout_constraintBottom_toBottomOf="parent"
    android:padding="30dp">

    <TextView
        android:id="@+id/muteImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/av_mute_selector"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center"
        android:text="静音"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/switchCameraImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/av_switch_camera_selector"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center"
        android:text="切换摄像头"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/muteImageView"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/speakerImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/av_speaker_selector"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center"
        android:text="免提"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/meetingHangupImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawableTop="@drawable/av_hangup_selector"
        android:drawablePadding="@dimen/dp_10"
        android:gravity="center"
        android:text="挂断"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/switchCameraImageView"
        app:layout_constraintStart_toStartOf="@+id/switchCameraImageView"
        app:layout_constraintTop_toBottomOf="@+id/switchCameraImageView" />
</androidx.constraintlayout.widget.ConstraintLayout>