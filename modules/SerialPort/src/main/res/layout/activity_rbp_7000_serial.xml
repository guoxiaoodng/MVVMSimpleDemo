<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <?xml version="1.0" encoding="utf-8"?>
    <!-- 垂直布局：按“标题→串口控制→指令区→数据显示”顺序排列 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#F5F5F5">

        <!-- 1. 标题栏（显示设备协议名称） -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RBP-7000 串口对接（V1.3）"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center_horizontal"
            android:marginBottom="20dp"/>

        <!-- 2. 串口控制区（打开/关闭串口） -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:marginBottom="20dp">

            <Button
                android:id="@+id/btn_serial_toggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打开串口（/dev/ttyUSB0）"
                android:textSize="16sp"
                android:paddingHorizontal="24dp"
                android:paddingVertical="8dp"
                android:background="#2196F3"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="12dp"/>

            <!-- 串口状态提示（如“已连接：9600bps”） -->
            <TextView
                android:id="@+id/tv_serial_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未连接"
                android:textSize="14sp"
                android:textColor="#FF5722"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <!-- 3. 设备指令区（对应协议3、4、5章节核心指令） -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设备操作指令"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:marginBottom="8dp"/>

        <!-- 3.1 第一行指令：连接设备（3.1）、启动测量（3.2）、停止测量（3.3） -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btn_connect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="连接设备"
                android:textSize="14sp"
                android:padding="8dp"
                android:background="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp"
                android:enabled="false"/> <!-- 初始禁用，串口连接后启用 -->

            <Button
                android:id="@+id/btn_start_measure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="启动测量"
                android:textSize="14sp"
                android:padding="8dp"
                android:background="#FF9800"
                android:textColor="#FFFFFF"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:enabled="false"/>

            <Button
                android:id="@+id/btn_stop_measure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="停止测量"
                android:textSize="14sp"
                android:padding="8dp"
                android:background="#F44336"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp"
                android:enabled="false"/>
        </LinearLayout>

        <!-- 3.2 第二行指令：查询设备编码（5.1）、恢复出厂设置（4.6） -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:marginBottom="20dp">

            <Button
                android:id="@+id/btn_query_device_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="查询设备编码"
                android:textSize="14sp"
                android:padding="8dp"
                android:background="#9C27B0"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp"
                android:enabled="false"/>

            <Button
                android:id="@+id/btn_factory_reset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="恢复出厂设置"
                android:textSize="14sp"
                android:padding="8dp"
                android:background="#607D8B"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp"
                android:enabled="false"/>
        </LinearLayout>

        <!-- 4. 数据显示区（对应协议3.4、3.5、3.7、5.1.1章节数据） -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="数据显示"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:marginBottom="8dp"/>

        <!-- 4.1 实时压力显示（3.4） -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实时压力："
                android:textSize="14sp"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/tv_real_pressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-- mmHg"
                android:textSize="18sp"
                android:textColor="#2196F3"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- 4.2 测量结果显示（3.7） -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测量结果："
                android:textSize="14sp"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/tv_measure_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="未测量（格式：收缩压/舒张压 mmHg | 脉搏 次/分 | 时间）"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- 4.3 设备编码显示（5.1.1） -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备编码："
                android:textSize="14sp"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/tv_device_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="未查询（格式：机型-年月-批次-序号）"
                android:textSize="14sp"
                android:textColor="#9C27B0"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- 4.4 系统提示/错误信息显示（3.5、4.5） -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统提示："
                android:textSize="14sp"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/tv_system_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="请先打开串口并连接设备"
                android:textSize="14sp"
                android:textColor="#FF5722"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

    </LinearLayout>

</layout>