<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="m"
            type="com.gk.world.comprehensive.bean.AllProjectBean" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_5"
        app:cardCornerRadius="@dimen/dp_8"
        app:cardElevation="@dimen/dp_10">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_15">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{m.industryCategoryName}"
                android:textColor="@color/black_333"
                android:textSize="@dimen/sp_14"
                app:layout_constraintEnd_toStartOf="@+id/state"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="这是项目名称文案" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{m.attractInvestmentSpeedName}"
                android:textColor="@color/orange_ffed6f00"
                android:textSize="@dimen/sp_12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="沟通洽淡" />

            <com.gk.world.resouce.dynamic.kv.KeyValueSingleView
                android:id="@+id/company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:is_edit="false"
                app:key_color="@color/gray_999"
                app:key_size="@dimen/sp_12"
                app:key_text="@string/company"
                app:layout_constraintTop_toBottomOf="@+id/name"
                app:value_color="@color/black_333"
                app:value_gravity="start"
                app:value_size="@dimen/sp_12"
                app:value_text="@{m.enterpriseName}" />

            <com.gk.world.resouce.dynamic.kv.KeyValueSingleView
                android:id="@+id/acreage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_10"
                app:is_edit="false"
                app:key_color="@color/gray_999"
                app:key_size="@dimen/sp_12"
                app:key_text="@string/acreage"
                app:layout_constraintEnd_toStartOf="@+id/amount_invested"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/company"
                app:value_color="@color/black_333"
                app:value_gravity="start"
                app:value_size="@dimen/sp_12"
                app:value_text="@{m.landArea}" />

            <com.gk.world.resouce.dynamic.kv.KeyValueSingleView
                android:id="@+id/amount_invested"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                app:is_edit="false"
                app:key_color="@color/gray_999"
                app:key_size="@dimen/sp_12"
                app:key_text="@string/amount_invested"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/acreage"
                app:layout_constraintTop_toBottomOf="@+id/company"
                app:value_color="@color/black_333"
                app:value_gravity="start"
                app:value_size="@dimen/sp_12"
                app:value_text="@{m.totalInvestment}" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>